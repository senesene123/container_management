<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-search"></i> 検索条件</h3>
  </div>
  <div class="panel-body">
    <% if @flg_params.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @flg_params.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-sm-3">
        <div class="form-group">
          <div class="checkbox">
            <label>
              <%= f.check_box :nippo_flg, checked: @search_params[:nippo_flg] == '1' %>
              日報
            </label>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4 control-label" for="">日付</label>
          <div class="col-sm-8">
            <%= f.text_field :daily, class: 'form-control nippo-label', autocomplete: "off", value: @search_params[:daily] %>
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <div class="checkbox">
            <label>
              <%= f.check_box :geppo_flg, checked: @search_params[:geppo_flg] == '1' %>
              月報
            </label>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4 control-label" for="">年月</label>
          <div class="col-sm-8">
            <%= f.text_field :monthly, class: 'form-control', :placeholder => "1990-01", value: @search_params[:monthly] %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-3">
        <div class="form-group">
          <label class="col-sm-4 control-label" for="">入庫日時</label>
          <div class="col-sm-8">
            <%= f.text_field :entering_date, class: 'form-control entering-label', autocomplete: "off", value: @search_params[:entering_date] %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-4 control-label" for="">出庫日時</label>
          <div class="col-sm-8">
            <%= f.text_field :leaving_date, class: 'form-control leaving-label', autocomplete: "off", value: @search_params[:leaving_date] %>
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <label class="col-sm-4 control-label" for="">入荷元</label>
          <div class="col-sm-8">
            <%= f.text_field :from_place, class: 'form-control', value: @search_params[:from_place] %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-4 control-label" for="">出荷先</label>
          <div class="col-sm-8">
            <%= f.text_field :to_place, class: 'form-control', value: @search_params[:to_place] %>
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <label class="col-sm-5 control-label" for="">野菜の種類</label>
          <div class="col-sm-7">
            <%= f.text_field :contents, class: 'form-control', value: @search_params[:contents] %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-12 row text-center">
      <button class="btn btn-default btn-left clear-form" type="button">クリア</button>
      <button class="btn btn-default btn-primary" type="submit"><i class="fa fa-search"></i> 検索</button>
    </div>
  </div>
</div>
