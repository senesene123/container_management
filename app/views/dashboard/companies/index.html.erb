<div id="validation_area"></div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-database"></i> 企業追加</h3>
  </div>
  <%= form_with(url: dashboard_companies_path, method: :post, remote: true) do |f| %>
    <table class="table">
      <thead>
        <tr>
          <th>企業ID</th>
          <th>企業名</th>
        </tr>
      </thead>
      <tbody class="bulk-registration-form">
        <tr class="item">
          <td>
            <%= f.text_field :company_id, class: 'form-control' %>
          </td>
          <td>
            <%= f.text_field :company_name, class: 'form-control' %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="text-center submit-area">
      <%= f.submit '追加', class: 'btn btn-success' %>
    </div> 
  <% end %>
</div>

<h3>企業一覧</h3>
<div id="company_area">
  <%= render "company_table", companies: @companies %>
</div>